@page "~/categorias/{skip?}/{take?}"
@model RazorAPP.Pages.CategoriesModel
@{
    ViewData["Title"] = "Categorias";
}

<h1>Categorias</h1>
<table>
    <thead>
        <tr>
            <td>ID</td>
            <td>Title</td>
            <td>Price</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.id</td>
                <td>@category.title</td>
                <td>@category.price.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>